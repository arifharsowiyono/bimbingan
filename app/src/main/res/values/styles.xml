<resources>

    <!-- Base application theme with noactionbar-->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <!-- Base application theme with noactionbar-->
    <style name="AppThemeNoActionBar" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <!-- Base application theme.Login -->
    <style name="AppThemeLogin" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary2</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark2</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppThemeLogin.AppBarOverLay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>
    <style name="AppThemeLogin.PopupOverLay" parent="ThemeOverlay.AppCompat.Light"/>

    <!-- Base application theme.Register -->
    <style name="AppThemeRegister" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary3</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark3</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppThemeRegister.AppBarOverLay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>
    <style name="AppThemeRegister.PopupOverLay" parent="ThemeOverlay.AppCompat.Light"/>

</resources>
